{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "es6",
      "es2017"
    ],
    "moduleResolution": "node",
    "target": "es5",
    "strict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": "src"
  },
  "include": ["src"],
  "exclude": [
    "**/__tests__"
  ]
}
